{% extends 'base.html.twig' %}

{% block title %}Calendrier{% endblock %}

{% block body %}
<h1 class="textCenter firstTitle">Calendrier : </h1>
    {# {{dump(publish)}} #}
    {# ceci est pour ma navbar#}
    <h3>Ici vous pourrez voir les sorties des chapitres de toutes les histoires. </h3>
    <hr>
    <main>
        <div id="calendar-holder"></div>
    </main>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const calendarEl = document.getElementById('calendar-holder');
        
            const calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                locale: 'fr',
                buttonText: {
                            today: 'Aujourd\'hui',
                            week: 'Semaine',
                            month: 'Mois',
                            year: 'AnnÃ©e',
                            },
                events: {
                    url: '/fc-load-events',
                    method: 'GET', // ðŸ‘ˆ OBLIGATOIRE : forcer GET !
                    failure: function () {
                        alert('Erreur lors du chargement des Ã©vÃ©nements.');
                    }
                },
                headerToolbar: {
                    start: 'prev,next',
                    center: 'title',
                    end: 'today,timeGridWeek,dayGridMonth,multiMonthYear'
                },
                timeZone: 'Europe/Paris',
            });
        
            calendar.render();
        });
    </script>
{% endblock %}