{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<section class="registerContainer">
    {# pour la gestion d'erreur #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{label}}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    {{ form_errors(registrationForm) }}
    <div class="left">
            <h1>Inscription</h1>
            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword, {label: 'Mot de passe'}) }}
                {{ form_row(registrationForm.agreeTerms) }}
                {{ form_end(registrationForm) }}
            <button><a href="/connect/google">S'inscrire avec google</a></button>
        </div>
        <div class="right">
            <h3>Bienvenue ! </h3>
            <p>Déjà un compte ?</p>
            <p><a href="{{ path('app_login')}}" class="linkBtn">Me connecter</a></p>
        </div>

    </section>
    {# {{ recaptcha3_get_script() }} ce script est INDISPENSABLE pour V3 #}
{% endblock %}
