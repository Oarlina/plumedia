{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}
{% block body %}
<section id="registerContainer" class=" ConnectContainer flex ">
    {# pour la gestion d'erreur #}
    {% for label, messages in app.flashes %}
    {% for message in messages %}
    <div class="alert alert-{{label}}">
        {{ message }}
    </div>
    {% endfor %}
    {% endfor %}
    {{ form_errors(registrationForm) }}
    <div class="left container textCenter  alignCenter ">
        <h2>Inscription</h2>
        {{ form_start(registrationForm) }}
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.pseudo) }}
                    {{ form_row(registrationForm.plainPassword, {label: 'Mot de passe'}) }} 
                    {{ form_row(registrationForm.confirmPassword, {label: 'Comfirmer le mot de passe'}) }} 
                    {{ form_row(registrationForm.avatar) }}
                    {{ form_row(registrationForm.agreeTerms) }}
                {{ form_end(registrationForm) }}
                <a href="/connect/google" class="bouton backgroundPink ">S'inscrire avec google</a>
        </div>
        <div class="right container textCenter backgroundPink">
            <h3>Bienvenue ! </h3>
            <p>Déjà un compte ?</p>
            <p><a href="{{ path('app_login')}}" class="bouton backgroundWhite ">Me connecter</a></p>
        </div>
    </section>

{% endblock %}