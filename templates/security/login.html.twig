{% extends 'base.html.twig' %}

{% block title %}Me connecter{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous etes déjà connecté(e) en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Me déconnecter</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
    <label for="inputEmail">Pseudo : </label>
    <input type="pseudo" value="pseudo" name="pseudo" id="inputPseudo" class="form-control" autocomplete="pseudo" required autofocus>
    <label for="inputPassword">Mot de passe : </label>
    <input type="password" value="Mot de passe" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <div class="checkbox mb-3">
        <label>
            <input type="checkbox" name="_remember_me"> Remember me
        </label>
    </div>

    <button class="btn btn-lg btn-primary" type="submit">
        Sign in
    </button>
    <p><a href="">Mot de passe oublié?</a></p>
    <p>Pas encore de compte ? <a href="{{ path('app_register') }}">M'inscrire</a></p>
</form>
{% endblock %}
