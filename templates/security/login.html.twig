{% extends 'base.html.twig' %}

{% block title %}Me connecter{% endblock %}

{% block body %}
{% if error %}
<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="loginContainer ConnectContainer flex">
    <div class="left container alignCenter textCenter backgroundPink">
        <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
        <form method="post">

            <label for="inputEmail"></label>
            <input type="email" name="email" id="inputEmail" class="form-control" autocomplete="pseudo" required autofocus>
            <label for="inputPassword"></label>
            <input type="password"  name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" >
        
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            <a href="{{ path('app_forgot_password_request')}}" class="linkBtn textBlack">Mot de passe oubli√©?</a>
            <button class="btn btn-lg btn-primary" type="submit">Me connecter</button>
            <button><a href="/connect/google" class="textBlack">Se connecter avec google</a></button>
        </form>
    </div>
    </p>
    <div class="right container textCenter">
        <h3>Bienvenue ! </h3>
        
        <p>Pas encore de compte ? </p>
        <a href="{{path('app_register')}}" class="bouton textBlack">M'inscrire</a>
    </div>
</div>
{% endblock %}
