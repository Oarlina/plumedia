{% extends 'base.html.twig' %}

{% block title %}Me connecter{% endblock %}

{% block body %}
{% if error %}
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<main id="loginContainer" class="ConnectContainer flex">
    <section class="left containerGold textCenter backgroundGold width50">
        <h2>Bienvenue ! </h2>
        <p>Pas encore de compte ? </p>
        <a href="{{path('app_register')}}" class="bouton boutonWhite backgroundWhite">M'inscrire</a>
    </section>

    <section class="right container textCenter width50">
        <h2>Connexion</h2>
        <form method="post" action="{{ path('app_login') }}">

            <label for="inputEmail"></label>
            <input type="email" name="email" id="inputEmail" class="form-control" autocomplete="username" required autofocus> <br>
            <label for="inputPassword"></label>
            <div class="flex alignCenter">
                <input type="password"  name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                <i class="fa-solid fa-eye" onclick="changeInput('inputPassword')"></i> <br>
            </div>
        
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" >
        
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            <button class="bouton boutonWhite backgroundWhite noBorder" type="submit">Me connecter</button> <br>
            <a href="{{ path('app_forgot_password_request')}}" class="boutonWhite noBorder">Mot de passe oubli√©?</a> <br><br>
            <a href="/connect/google" class="boutonWhite noBorder">Se connecter avec google</a>
        </form>
    </section>
    
</main>
{% endblock %}
