{% extends 'base.html.twig' %}

{% block title %}
    Ma blibliothèque
{% endblock %}

{% block body %}
    {# pour la gestion d'erreur #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{label}}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <div id="profil">
        {% if user.avatar %}
            <picture>
                <img src="{{ asset('uploads/user/' ~ user.avatar) }}" alt="image avatar" id="bigAvatar" class="width100">
            </picture>
            <picture>
                <img src="/uploads/user/{{user.avatar}}" alt="image avatar" id="littleAvatar"> 
            </picture>
        {% else %}
            <picture>
                <img src="{{ asset('img/avatar_base.png') }}" alt="image faux avatar" id="bigAvatar" class="width100">
            </picture>
            <picture>
                <img src="/img/avatar_base.png" alt="image faux avatar" id="littleAvatar"> 
            </picture>
        {% endif %}
        <nav class="flex justifyContent">
            <a href="{{path('app_profil')}}" class="">Mes informations</a>
            <a href="">|</a>
            <a href="{{path('app_subscriptionProfil')}}" class="">Mes abonnements</a>
            <a href="">|</a>
            <a href="{{path('app_libraryProfil')}}" class=""><b>Ma blibliothèque</b></a>
            <a href="">|</a>
            <a href="{{path('app_storyProfil')}}" class="">Mes histoires</a>
        </nav>
        <main class="flex">
            {% if app.user.followedStories | length >1 %}
                
            {% else %}
                <p>Vous ne suivez aucune histoires !!</p>
            {% endif %}
        </main>
    </div>

{% endblock %}