{% extends 'base.html.twig' %}

{% block title %}
    Mes abonnements
{% endblock %}

{% block body %}
    {# pour la gestion d'erreur #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{label}}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <section id="profil">
        {% if app.user.avatar %}
            <img src="uploads/user/{{app.user.avatar}}" alt="image avatar" id="bigAvatar">
            <img src="uploads/user/{{app.user.avatar}}" alt="image avatar" id="littleAvatar"> 
        {% else %}
            <img src="img/avatar_base.png" alt="image faux avatar" id="bigAvatar">
            <img src="img/avatar_base.png" alt="image faux avatar" id="littleAvatar"> 
        {% endif %}
        <nav>
            <a href="{{path('app_profil')}}">Mes informations</a>
            <a href="">|</a>
            <a href="{{path('app_subscriptionProfil')}}"><b>Mes abonnements</b></a>
            <a href="">|</a>
            <a href="{{path('app_libraryProfil')}}">Ma blibliothèque</a>
            <a href="">|</a>
            <a href="{{path('app_storyProfil')}}">Mes histoires</a>
        </nav>
        <main>
            <div class="follows">
                <div class="follow">
                    <h3>Vous suivez ({{user.follow | length}}):</h3>
                    {% for folo in user.follow %}
                        <p><a href="{{path('app_profile', {'id':folo.id})}}"><img src="uploads/user/{{user.avatar}}" alt="image avatar" class="otherAvatar">{{folo.pseudo}}</a></p>
                    {% endfor %}
                </div>
            </div>

            <div class="follows">
                <div class="follow">
                    <h3>Vos abonnés ({{user.isFollow | length}}):</h3>
                    {% for folo in user.isFollow %}
                        <p><a href="{{path('app_profile', {'id':folo.id})}}"><img src="uploads/user/{{user.avatar}}" alt="image avatar" class="otherAvatar">{{folo.pseudo}}</a></p>
                    {% endfor %}
                </div>
            </div>
        </main>
    </section>

{% endblock %}