{% extends 'base.html.twig' %}

{% block title %}{{category.name}}{% endblock %}

{% block body %}
    <h1 class="textCenter">{{category.name}}</h1>
        <a href="{{path('app_category')}}" class="textBlack"><i class="fa-solid fa-arrow-left"></i> Catégories</a>
        
        <main class="flex flexDirectionRowcategories width100 ">
            <div class="left flex flexDirectionCollumn">
                <a href="{{path('app_category')}}" class="textBlack">Tous</a>
                {% for cat in categories %}
                    {% if cat.name == category.name %}
                        <a href="{{path('show_category', {'idCategory': cat.id})}}" class="textBlack larger bouton backgroundGrey"><b>{{cat.name}}</b> </a>
                    {% else %}
                        <a href="{{path('show_category', {'idCategory': cat.id})}}" class="textBlack">{{cat.name}} </a>
                    {% endif %}
                {% endfor %}
            </div>
            <div class="right stories flex flexDirectionRow">
                {% if category.stories |length <1 %}
                    <p>Aucune histoire dans cette catégorie</p>
                {% else %}
                    {% for story in category.stories %}
                        <div class="story textCenter">
                            {% if story.cover %}
                                <img src="{{ asset('uploads/story/' ~ story.cover) }}" alt="couverture de {{story.name}}">  
                            {% else %}
                                <img src="{{ asset('img/forNoCover.png') }}" alt="couverture de {{story.name}}">  
                            {% endif %}
                            <p class="textBlack">{{story.name}}</p>
                            <a class="bouton backgroundPurple textBlack" href="{{path('detail_story', {'id' : story.id})}}">Voir plus <i class="fa-solid fa-arrow-right"></i></a>
                            <p class="summary backgroundWhite">{{story.summary}}</p>

                        </div>
                    {% endfor %}
                {% endif %}
            </div>
        </main>
{% endblock %}
